<div class="large-7 large-centered columns" style="margin-top: 50px;">
  <%= form_for @session_type, html: {:class => "custom"} do |f| %>
    <% if @session_type.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@session_type.errors.count, "error") %> prohibited this session_type from being saved:</h2>

        <ul>
        <% @session_type.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="large-2 columns">
        <%= f.label :name, "Name: ", class: "inline right", style: "margin-right: 20px;" %>
      </div>
      <div class="large-9 columns left">
        <%= f.text_field :name %>
      </div>
    </div>
    <div class="row" style="margin-top: 65px;">
      <div class="large-8 large-centered columns"> 
        <div class="large-5 columns left">   
          <%= link_to 'Cancel', :back, class: "button radius expand alert" %>
        </div>
        <div class="large-5 columns right">      
          <%= f.submit "Submit", class: "button radius expand" %>
        </div>
      </div>
    </div>
  <% end %>
</div>