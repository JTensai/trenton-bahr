<div class="row">
	<div class="large-4 columns" style="margin: 30px 15px; padding: 10px;">
		<div class="row" style=" border: solid #444 1px; box-shadow: 0 0 8px #222;">
			<div class="large-10 large-centered columns" style="margin: 15px; 0px;">
				<b>Sort Order: </b><%= @gallery_image.sort_order %>
			</div>
			<div class="large-10 large-centered columns" style="margin: 15px; 0px;">
				<b>Category: </b><%= @gallery_image.category.gsub("%2F","/") %>
			</div>
		</div>
		<div class="row" style="margin-top: 20px;">
			<div class="large-5 columns left">
				<%= link_to "Back", {:controller => "viewable", :action => "gallery", :category => @gallery_image.category }, class: "button radius expand secondary" %>
			</div>
			<div class="large-5 columns right">      
				<%= link_to "Edit", edit_gallery_image_path(@gallery_image), class: "button radius expand" %>
			</div>
		</div>
	</div>
	<div class="large-7 columns" style="margin: 30px 15px; text-align: center">
	 	<%= image_tag(@gallery_image.image, style: "box-shadow: 0 0 20px #222;") %>
	</div>
</div>