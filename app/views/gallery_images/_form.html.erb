<div class="large-10 large-centered columns" style="margin-top: 50px;">
  <%= form_for @gallery_image, html: {:class => "custom"} do |f| %>
    <% if @gallery_image.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@gallery_image.errors.count, "error") %> prohibited this gallery_image from being saved:</h2>

        <ul>
        <% @gallery_image.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="large-2 columns">
        <%= f.label :image, "Image: ", class: "inline right", style: "margin-right: 10px;" %>
      </div>
      <div class="large-8 columns left">
        <%= f.text_field :image %>
      </div>
    </div>
    <div class="row">
      <div class="large-2 columns">
        <%= f.label :category, "Category: ", class: "inline right", style: "margin-right: 10px;" %>
      </div>
      <div class="large-3 columns left">
        <%= f.select :category, ['Families', 'Seniors', 'Children', 'Pets', 'Business'], { :prompt => "Select a Category" }, { id: "customDropdown", class: "medium" } %>
      </div>
    </div>
    <div class="row">
      <div class="large-2 columns">
        <%= f.label :sort_order, "Sort Order: ", class: "inline right", style: "margin-right: 10px;" %>
      </div>
      <div class="large-2 columns left">
        <%= f.number_field :sort_order %>
      </div>
    </div>

    <div class="row" style="margin-top: 65px;">
      <div class="large-4 large-centered columns"> 
        <div class="large-5 columns left">   
          <%= link_to 'Cancel', :back, class: "button radius expand alert" %>
        </div>
        <div class="large-5 columns right">      
          <%= f.submit "Submit", class: "button radius expand" %>
        </div>
      </div>
    </div>
  <% end %>
</div>