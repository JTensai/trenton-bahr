<style>
  .videoWrapper {
  position: relative;
  padding-bottom: 56.25%; /* 16:9 */
  padding-top: 25px;
  height: 0;
  }
  .videoWrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
</style>

<%= form_for(@trenton) do |f| %>
  <% if @trenton.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@trenton.errors.count, "error") %> prohibited this trenton from being saved:</h2>

      <ul>
      <% @trenton.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="large-12 columns">
    <div class="row">
      <div class="large-4 columns" style="padding: 10px;">
        <% if @trenton.image == nil %>
          <div class="large-2 columns"><%= f.label :image, "Image:", class: "inline", style: "font-weight: bold" %></div>
          <div class="large-10 columns"><%= f.file_field :image, style: "margin-top: 6px;" %></div>
          <%= image_tag("/assets/placeholder.jpg") %>
        <% else %>
          <div class="large-2 columns"><%= f.label :image, "Image:", class: "inline", style: "font-weight: bold" %></div>
          <div class="large-10 columns"><%= f.file_field :image, style: "margin-top: 6px;" %></div>
          <%= image_tag(@trenton.image.to_s) %>
        <% end %>
      </div>
      <div class="large-8 columns" style="padding: 10px;">
        <div class="row">
          <div class="large-2 columns"><%= f.label :video_link, "Video Link:", class: "inline", style: "font-weight: bold" %></div>
          <div class="large-10 columns"><%= f.text_field :video_link %></div>
        </div>
        <div class="row">
          <div id="video_wrapper">
            <% if @trenton.video_link == nil %>
              <div style="width: 100%; height: 350px; background-image: url(/assets/placeholder.jpg); background-repeat: no-repeat; background-position: center; background-size: 100%">
              </div>
            <% else %>
              <iframe width="100%" height="350px" src=<%= @trenton.video_link %> frameborder="0" allowfullscreen></iframe>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <div class="row" style="margin-top: 15px;">
      <div class="large-12 columns large-centered" style="padding: 0 20px;">
        <h3 style="margin-bottom: 0px;">Meet the Artist:</h3>
        <%= f.text_area :meet_the_artist_text, style: "height: 400px;", placeholder: "This text will be interpreted as HTML. If you want a new paragraph, put <p> at the beginning and </p> at the end of each paragraph" %>
      </div>
    </div>

    <div class="row" style="margin-top: 25px;">
      <div class="large-4 large-centered columns"> 
        <div class="large-5 columns left">   
          <%= link_to 'Cancel', :back, class: "button radius expand alert" %>
        </div>
        <div class="large-5 columns right">      
          <%= f.submit "Submit", class: "button radius expand" %>
        </div>
      </div>
    </div>
  </div>

<% end %>
