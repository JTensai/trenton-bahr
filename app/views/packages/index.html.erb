<h3 style="text-align:center;">Packages</h3>

<div class="row">
  <div class="large-3 large-centered columns">
      <%= link_to 'New Category', new_package_path, class: "button radius expand small" %>
  </div>
</div>

<div class="row">
  <table style="margin: 20px auto 0 auto;">
    <tr>
      <th>Sort Order</th>
      <th>Name</th>
      <th>Price</th>
      <th>Actions</th>
    </tr>

  <% @packages.each do |package| %>
    <tr>
      <td style="width: 90px; text-align:center;"><%= package.sort_order %></td>
      <td style="width: 200px; text-align:center;"><%= package.name %></td>
      <td style="width: 70px; text-align:center;">$<%= package.price %></td>
      <td style="width: 168px; text-align:center;">
        <%= link_to 'Show', package, class: "tiny button", style: "margin: 5px 0;" %>
        <%= link_to 'Edit', edit_package_path(package), class: "tiny button radius secondary", style:"margin: 5px 0;" %>
        <%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' }, class: "tiny button radius alert", style:"margin: 0;" %>
      </td>
    </tr>
  <% end %>
  </table>
</div>