<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
  <head>
  	<meta charset="utf-8" />

  	<!-- Uncomment to make IE8 render like IE7 -->
  	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->

  	<!-- Set the viewport width to device width for mobile -->
  	<meta name="viewport" content="width=device-width, initial-scale=1.0" />

  	<title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>

  	<%= stylesheet_link_tag    "application" %>
  	<%= javascript_include_tag "vendor/custom.modernizr" %>
    <%= csrf_meta_tags %>
  </head>

  <body style="background-color: #f3ecdc;">
    <div id="fb-root"></div>
    <script>
      (function(d, s, id) {var js, fjs = d.getElementsByTagName(s)[0]; if (d.getElementById(id)) return; js = d.createElement(s); js.id = id; js.src = "//connect.facebook.net/en_GB/all.js#xfbml=1"; fjs.parentNode.insertBefore(js, fjs);}(document, 'script', 'facebook-jssdk'));
    </script>
    <div id="header" class="row">
      <div class="row">
        <div class="large-4 columns" style="height:100px;">
          <%= link_to image_tag("Bahr_Temp_Logo.png"), root_path %>
        </div>
        <div class="large-3 columns right" style="padding: 5px; text-align:right; line-height: 25px;">
          <span style="font-size: 18px;">(916)-797-1002</span><br>
          4880 Douglas Blvd<br>Granite Bay CA 95746<br>
          <div class="fb-like" style="margin-top: 3px;" data-href="https://www.facebook.com/pages/Trenton-Bahr-Fine-Portraiture/446345495455" data-width="130" data-layout="button_count" data-show-faces="false" data-send="false"></div>
        </div>
      </div>
      

      <div class="row" style="margin-top: 0px;">
        <div class="large-12 columns large-centered">
          <div class="large-10 columns large-centered">
            <ul class="menu_button_group round">
              <li style="height: 28px;"><%= link_to "Home", home_path, class: "menu_button" %></li>
              <li><%= link_to "Session Info", session_information_path, class: "menu_button" %></li>
              <li><%= link_to "Gallery", { controller: "viewable", action: "gallery", category: "Families" }, class: "menu_button" %></li>
              <li><%= link_to "About Us", about_path, class: "menu_button" %></li>
              <li><%= link_to "Contact", contact_path, class: "menu_button" %></li>
              <li><%= link_to "Charities", charities_path, class: "menu_button" %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <% unless notice == nil %>
      <div class="row" id="flash_container">
        <% if notice == "You must be logged in to do that" || notice == "Username or Password incorrect" %>
          <div data-alert id="alert" class="large-12 large-centered columns alert-box alert radius" style="padding: 8px; margin: 10px auto; text-align:center;">
        <% else %>
          <div data-alert id="succes_alert" class="large-12 large-centered columns alert-box success radius" style="padding: 8px; margin: 10px auto; text-align:center;">
        <% end %>
            <%= notice %>
            <a href="#" class="close">&times;</a>
          </div>
      </div>
    <% end %>

    <div id="page" class="row">      
      <div class="row" id="page_content">
        <%= yield %>
      </div>

      <div class="row" id="footer">
        <div class="large-4 columns">          
          <%= image_tag("Bahr_Temp_Heart_small.png") %>
        </div>
        <div class="large-4 columns" style="padding: 0 20px; margin-top: 28px;">
          <%= link_to image_tag("facebook.png", height: "40", width: "40"), "http://www.facebook.com/trentonbahr", style: "margin-right: 5px;" %>
          <%= link_to image_tag("twitter.png", height: "40", width: "40"), "https://twitter.com/TrentonBahr", style: "margin-right: 5px;" %>
          <%= link_to image_tag("youtube.png", height: "40", width: "40"), "http://www.facebook.com/trentonbahr", style: "margin-right: 5px;" %>
          <%= link_to image_tag("pintrest.png", height: "40", width: "40"), "http://www.facebook.com/trentonbahr", style: "margin-right: 5px;" %>
        </div>
        <div class="large-4 columns right" style="margin-top: 35px;">
          <% if current_user %>
            <%= link_to "Log Out", session_path("current"), method: "delete", class: "button small round right alert", style:"margin-bottom:0" %>
            <%= link_to "Database", database_path, class: "button small round right", style: "margin-right:15px; margin-bottom:0" %>
            <%= link_to "Edit User", edit_user_path(current_user.id), class: "button small round right secondary", style: "margin-right:15px; margin-bottom:0" %>
          <% else %>
            <%= link_to "Log In", login_path, class: "button small round right secondary", style: "margin-bottom:0" %>
          <% end %>
        </div>
      </div>
    </div>
    
    <%= javascript_include_tag "application" %>
  </body>

</html>
