<br><br><h3 style="text-align:center;">Listing Testimonials</h3>

<div class="row">
  <div class="large-3 large-centered columns">
      <%= link_to 'New Testimonial', new_testimonial_path, class: "button radius expand small" %>
  </div>
</div>

<div class="row">
  <table style="margin: 30px auto 0 auto;">
    <tr>
      <th>Live</th>
      <th>Testimonial</th>
      <th>Category</th>
      <th>Firstname</th>
      <th>Actions</th>
    </tr>

  <% @testimonials.each do |testimonial| %>
    <tr>
      <td style="text-align:center; width: 40px;"><% if testimonial.live == true %>Yes<% else %>No<% end %></td>
      <td><%= testimonial.testimonial %></td>
      <td style="text-align:center; width: 100px;"><%= testimonial.category %></td>
      <td style="text-align:center; width: 150px;"><%= testimonial.firstname %></td>
      <td style="width: 167px; text-align:center">
        <%= link_to "Show", testimonial, class: "button radius tiny", style:"margin: 0;" %>
        <%= link_to 'Edit', edit_testimonial_path(testimonial), class: "tiny button radius secondary", style:"margin: 5px 0;" %>
        <%= link_to 'Destroy', testimonial, method: :delete, data: { confirm: 'Are you sure?' }, class: "tiny button radius alert", style:"margin: 0;" %>
      </td>
    </tr>
  <% end %>
  </table>
</div>