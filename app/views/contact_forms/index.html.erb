<h3 style="text-align:center;">Listing Contact Forms</h3>

<div class="row">
  <div class="large-3 large-centered columns">
      <%= link_to 'New Contact Form', new_contact_form_path, class: "button radius expand small" %>
  </div>
</div>

<div class="row">
    <table style="margin: 30px auto 0 auto;">
      <tr>
        <th>Request Type</th>
        <th>Name</th>
        <th>Phone Number</th>
        <th>Contact Time</th>
        <th>Date Created</th>
        <th>Actions</th>
      </tr>

    <% @contact_forms.each do |contact_form| %>
      <tr>
        <td style="text-align:center; width: 115px;"><%= contact_form.request_type %></td>
        <td style="width: 200px; font-weight: bold; text-align:center"><%=link_to contact_form.name, contact_form %></td>
        <td style="width: 130px; text-align:center;"><%= contact_form.phone_number %></td>
        <td style="width: 130px; text-align:center;"><%= contact_form.contact_time %></td>
        <td style="width: 160px; text-align:center;"><%= contact_form.created_at.strftime("%B %e, %Y") %></td>
        <td>
            <%= link_to 'Edit', edit_contact_form_path(contact_form), class: "tiny button radius secondary", style:"margin: 5px 0;" %>
            <%= link_to 'Destroy', contact_form, method: :delete, data: { confirm: 'Are you sure?' }, class: "tiny button radius alert", style:"margin: 0;" %>
        </td>
      </tr>
    <% end %>
    </table>
</div>