<div class="large-10 large-centered columns" style="margin-top: 50px;">
  <%= form_for @employee, html: {:class => "custom", :'data-abide' => ''} do |f| %>
    <% if @employee.errors.any? %>
      <div class="error_messages">
        <% @employee.errors.full_messages.each do |message| %>
          <div data-alert id="succes_alert" class="large-9 large-centered columns alert-box alert radius" style="padding: 8px; margin: 0 auto 20px auto; text-align:center;">
            <%= message %>
            <a href="#" class="close">&times;</a>
          </div>
        <% end %>
      </div>
    <% end %>

    <div class="row">
      <div class="large-6 columns">
        <div class="large-3 columns">
          <%= f.label :name, "Name: ", class: "inline right", style: "margin-right: 15px;" %>
        </div>
        <div class="large-8 columns left">
          <%= f.text_field :name, required:'' %>          
          <small class="error">Can't be blank</small>
        </div>
      </div>
      <div class="large-3 columns">
        <div class="large-5 columns">
          <%= f.label :sort_order, "Sort Order: ", class: "inline right", style: "margin-right: 10px;" %>
        </div>
        <div class="large-6 columns left">
          <%= f.number_field :sort_order, required:'' %>
          <small class="error">Can't be blank</small>
        </div>
      </div>
      <div class="large-3 columns right">
        <div class="large-2 columns left" style="padding-top: 6px; text-align: right;">
          <%= f.check_box :current %>
        </div>
        <div class="large-10 columns">
          <%= f.label :current, "Current Employee", class: "inline left", style: "margin-left: 6px; font-weight: bold" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <div class="large-3 columns">
          <%= f.label :job_title, "Job Title: ", class: "inline right", style:"margin-right: 15px;" %>
        </div>
        <div class="large-8 columns left">
          <%= f.text_field :job_title, required:'' %>
          <small class="error">Can't be blank</small>
        </div>
      </div>
      <div class="large-6 columns">
        <div class="large-2 columns">
          <%= f.label :image, "Image: ", class: "inline right", style: "margin-right: 15px;" %>
        </div>
        <div class="large-10 columns">
          <%= f.file_field :image, style: "margin-top: 6px;" %>
          <small class="error">Can't be blank</small>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-11 columns large-centered">
        <div class="large-1 columns">
          <%= f.label :description, "Destcription: ", class: "inline right", style: "margin-right: 9px;" %>
        </div>
        <div class="large-11 columns">
          <%= f.text_field :description, required:'', style: "margin-left: 6px;" %>
          <small class="error" style="margin-left: 6px;">Can't be blank</small>
        </div>
      </div>
    </div>

    <div class="row" style="margin-top: 65px;">
      <div class="large-6 large-centered columns"> 
        <div class="large-5 columns left">   
          <%= link_to 'Cancel', :back, class: "button radius expand alert" %>
        </div>
        <div class="large-5 columns right">      
          <%= f.submit "Submit", class: "button radius expand" %>
        </div>
      </div>
    </div>
  <% end %>
</div>