<!-- data-options="pause_on_hover: true; animation_speed: 500; slide_number: false;" -->
<% @orbit_options = "animation: fade; bullets: false; navigation_arrows: false; timer_speed: 4000; resume_on_mouseout: true;" %>

<div class="large-12 columns">
	<div class="row">		
		<div class="large-11 columns large-centered">
			<div class="slideshow-wrapper" style="border: solid 2px #444; box-shadow: 0 0 20px #666; overflow:hidden; white-space:nowrap; max-height: 454px; background-color: #444;">
				<div class="preloader"></div>
				<ul data-orbit data-options="<%= @orbit_options %>">
					<% if @rotating_images == [] %>
						<li><%= image_tag('http://placehold.it/1570x800/5f0f0f&text=Placeholder', onContextMenu: "return false;") %></li>
						<li><%= image_tag('http://placehold.it/884x450/116a78&text=Placeholder', onContextMenu: "return false;") %></li>
						<li><%= image_tag('http://placehold.it/884x450/bb1b1b&text=Placeholder', onContextMenu: "return false;") %></li>
						<li><%= image_tag('http://placehold.it/884x450/1c0205&text=Placeholder', onContextMenu: "return false;") %></li>
					<% else %>					
						<% @rotating_images.each do |r| %>
							<li><%= image_tag(r.image.url, onContextMenu: "return false;", style: "border: solid black 3px;") %></li>
						<% end %>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
<h5 style="font-style: italic; margin: 20px 0 20px 0; text-align:center;">"This is where the Guarantee will go" <span style="font-size: 13px">-Trenton Bahr</span></h5>
	<div class="row" style="margin-top: 20px;">
		<div class="large-11 columns large-centered">
			<div class="large-4 columns">
				<div class="large-12 large-centered" style="height: 50px; text-align:center">
					<% @downloads.each do |d| %>
						<% if d.sort_order == 1 %>
							<%= link_to d.name, { action: "download", name: d.name }, { class: "button alert", style: "width: 190px;" } %>
						<% end %>
					<% end %>
				</div>
			</div>
			<div class="large-4 columns">
				<div class="large-12 large-centered" style="height: 50px; text-align:center">
					<%= link_to "Request Session", 'javascript:;', { class: "button alert", :'data-reveal-id' => "requestSessionModal", style: "width: 190px;" } %>
				</div>
			</div>
			<div class="large-4 columns">
				<div class="large-12 large-centered" style="height: 50px; text-align:center">
					<% @downloads.each do |d| %>
						<% if d.sort_order == 2 %>
							<%= link_to d.name, { action: "download", name: d.name }, { class: "button alert", style: "width: 190px;" } %>
						<% end %>
					<% end %>
				</div>
			</div>
		</div>
	</div>

	<div class="row" style="margin-top: 10px;">		
		<div class="large-11 columns large-centered">
			<div class="small-6 large-3 columns" style="padding: 10px;">
				<div class="large-12 columns">
					<%= link_to image_tag("families.jpg", style: "border: solid 1px #666; box-shadow: 0 0 12px #555;"), {:controller => "viewable", :action => "gallery", :category => "Family Portraits"} %>
				</div>
			</div>
			<div class="small-6 large-3 columns" style="padding: 10px;">
				<div class="large-12 columns">
					<%= link_to image_tag("seniors.jpg", style: "border: solid 1px #666; box-shadow: 0 0 12px #555;"), {:controller => "viewable", :action => "gallery", :category => "High School Seniors"} %>
				</div>
			</div>
			<div class="small-6 large-3 columns" style="padding: 10px;">
				<div class="large-12 columns">
					<%= link_to image_tag("pets.jpg", style: "border: solid 1px #666; box-shadow: 0 0 12px #555;"), {:controller => "viewable", :action => "gallery", :category => "Canine"} %>
				</div>
			</div>
			<div class="small-6 large-3 columns" style="padding: 10px;">
				<div class="large-12 columns">
					<%= link_to image_tag("children.jpg", style: "border: solid 1px #666; box-shadow: 0 0 12px #555;"), {:controller => "viewable", :action => "gallery", :category => "Children"} %>
				</div>
			</div>
		</div>
	</div>

	<div class="row" style="margin-top: 40px;">
		<div class="large-4 columns" style="padding: 5px 20px">			
			<div style="border: solid #888 1px; border-radius: 4px; padding: 10px; min-height: 150px;">
				<% if @seniors.any? %>
					<% @seniors.each do |s| %>
						<div style="color: #444; line-height: 26px; text-align: justify;">
							"<%= s.testimonial %>"
							<div style="text-align: right; font-style: italic; margin-right: 20px; color: #777;">
								- <%= s.firstname %>
							</div>
						</div>
					<% end %>
				<% else %>
					<h4 style=" text-align:center; color: #666">No Testimonials available for this category.</h4>
				<% end %>
			</div>
		</div>
		<div class="large-4 columns" style="padding: 5px 20px;">
			<div style="border: solid #888 1px; border-radius: 4px; padding: 10px; min-height: 150px;">
				<% if @families.any? %>
					<% @families.each do |f| %>
						<div style="color: #444; line-height: 26px; text-align: justify;">
							"<%= f.testimonial %>"
							<div style="text-align: right; font-style: italic; margin-right: 20px; color: #777;">
								- <%= f.firstname %>
							</div>
						</div>
					<% end %>
				<% else %>
					<h4 style=" text-align:center; color: #666">No Testimonials available for this category.</h4>
				<% end %>
			</div>
		</div>
		<div class="large-4 columns" style="padding: 5px 20px">
			<div style="border: solid #888 1px; border-radius: 4px; padding: 10px; min-height: 150px;">
				<% if @others.any? %>
					<% @others.each do |o| %>
						<div style="color: #444; line-height: 26px; text-align: justify;">
							"<%= o.testimonial %>"
							<div style="text-align: right; font-style: italic; margin-right: 20px; color: #777;">
								- <%= o.firstname %>
							</div>
						</div>
					<% end %>
				<% else %>
					<h4 style=" text-align:center; color: #666">No Testimonials available for this category.</h4>
				<% end %>
			</div>
		</div>
	</div>
<div id="requestSessionModal" class="reveal-modal" style="top: 15px;">
	<h3 style="text-align:center">Request Info</h3>
	<%= render 'contact_forms/form', contact_form: @contact_form = ContactForm.new, origin: @passed_origin = "front_page", back: @back_destination = root_path, cancel: @can_cancel = false, request_type: "Reservation" %>
	<a class="close-reveal-modal">&#215;</a>
</div>
</div>
