		        <%= link_to "Seniors", {:controller => "viewable", :action => "gallery", :category => "Seniors"}, class: "button radius expand alert" %>
		        <%= link_to "Children", {:controller => "viewable", :action => "gallery", :category => "Children"}, class: "button radius expand alert" %>
		        <%= link_to "Pets", {:controller => "viewable", :action => "gallery", :category => "Pets"}, class: "button radius expand alert" %>
		        <%= link_to "Business", {:controller => "viewable", :action => "gallery", :category => "Business"}, class: "button radius expand alert", style: "margin-bottom:0" %>
		    </div>
	    	<div class="large-11 large-centered columns" style="margin-top: 45px;">
		        <%= link_to 'New Image', new_gallery_image_path, class: "button radius expand small" %>
		    </div>
		</div>
		<div class="large-10 columns" style="padding: 15px 0px 0px 40px;">
			<div class="row">
				<!-- To be used when not logged in -->
				<h6>While not logged in, pictures behave this way:</h6>
