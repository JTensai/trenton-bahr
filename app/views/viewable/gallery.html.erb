<div id="galleryModal" class="reveal-modal">
	<div class="preloader"></div>
	<ul data-orbit data-options="animation: fade; variable_height: true; animation_speed: 500; timer_speed: 1000000; pause_on_hover: true; resume_on_mouseout: false; navigation_arrows: true; slide_number: true; bullets: false; timer: false;">
		<% s = 0 %>
		<% @images_by_category.each do |gallery_image| %>
			<% s = s+1 %>
			<li style="padding: 10px;" data-orbit-slide="<%= "picture_#{s}" %>">
				
				<%= image_tag(gallery_image.image, style:"margin: 0 auto 0px auto; box-shadow: 0 0 8px #555; max-height: 550px;", onContextMenu: "return false;") %>
				<% unless gallery_image.caption == "" %>
					<div class="orbit-caption" style="text-align:center; position: relative; margin: 10px auto; font-size: 16px; max-width: 700px;">
						<h6 style="background-color: rgba(0,0,0,0.5); color: #fff; font-weight: normal; padding: 10px 40px; box-shadow: inset 0 1px 2px #fff; border-radius: 15px;"><%= gallery_image.caption %></h6>
					</div>
				<% end %>
				
			</li>
	  	<% end %>
	</ul>
	<a class="close-reveal-modal">&#215;</a>
</div>